<odoo>
    <template id="cortana_web_assets_common" inherit_id="web.assets_common">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/cortana/static/src/js/cortana.js"/>
        </xpath>
    </template>
    <template id="cortana_web_assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/cortana/static/src/css/cortana.css"/>
        </xpath>
    </template>
</odoo>